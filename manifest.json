{
  "author": "Steven A. Bjornson",
  "name": "Bandcamp Enhancement Suite",
  "version": "0.7.0",
  "manifest_version": 2,
  "description": "Provides extra functionality for Bandcamp ",
  "homepage_url": "https://github.com/sabjorn/BandcampEnhancementSuite",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Bandcamp Enhancement Suite",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "http://*.bandcamp.com/*",
    "https://*.bandcamp.com/*",
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.bandcamp.com/*",
        "https://*.bandcamp.com/*"
      ],
      "js": [
        "js/jquery/jquery.slim.min.js", "src/label_view.js"
      ]
    }
  ]
}
