{
  "author": "Steven A. Bjornson",
  "name": "Bandcamp Label View",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "Modifies Bandcamp Label Pages to Provide iFrame Previews for All Releases",
  "homepage_url": "https://github.com/sabjorn/bandcampLabelView",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "http://*.com/*",
    "https://*.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.com/*",
        "https://*.com/*"
      ],
      "js": [
        "js/jquery/jquery-3.3.1.min.js", "src/label_view.js"
      ]
    }
  ]
}