{
  "name": "bandcampenhancementsuite",
  "version": "9.9.9",
  "description": "Chrome extension adding extra features to the Bandcamp experience.",
  "dependencies": {
    "client-zip": "^2.5.0",
    "idb": "^8.0.0",
    "web-audio-beat-detector": "^8.2.14"
  },
  "devDependencies": {
    "@percy/cli": "^1.29.3",
    "@percy/puppeteer": "^2.0.2",
    "@types/chrome": "^0.0.277",
    "@types/node": "^22.10.2",
    "happy-dom": "^15.11.7",
    "oxlint": "^1.6.0",
    "prettier": "^3.4.2",
    "puppeteer": "^23.9.0",
    "sinon": "^19.0.2",
    "sinon-chrome": "^3.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:legacy": "karma start --single-run",
    "lint": "oxlint ./src/ ./test/",
    "lint:fix": "oxlint ./src/ ./test/ --fix",
    "format": "prettier --write ./src/ ./test/ ./html/ ./*.json ./*.js ./*.ts",
    "format:check": "prettier --check ./src/ ./test/ ./html/ ./*.json ./*.js ./*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "build": "tsup --env.NODE_ENV=production",
    "build:dev": "tsup --env.NODE_ENV=development",
    "build:watch": "tsup --env.NODE_ENV=development --watch",
    "dev": "pnpm run build:watch",
    "snapshots": "percy exec -- node snapshots.js",
    "clean": "rm -fr ./node_modules ./dist",
    "package": "pnpm run build && zip BandcampEnhancementSuite_chrome.zip LICENSE _locales/**/* icons/* css/* dist/* svg/* manifest.json html/browser_action.html && cp manifest.json manifest.json.backup &&  sed -i '' -e 's,\"service_worker\": \"dist/background.js\",\"scripts\": [\"dist/background.js\"],g' ./manifest.json && zip BandcampEnhancementSuite_firefox.zip LICENSE _locales/**/* icons/* css/* dist/* manifest.json html/browser_action.html &&  mv manifest.json.backup manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabjorn/BandcampEnhancementSuite.git"
  },
  "author": "S. A. Bj√∏rn <info@sabjorn.net> (http://sabjorn.net/)",
  "contributors": [
    "Eric McNiece <hello@emc2innovation.com> (https://github.com/emcniece)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabjorn/BandcampEnhancementSuite/issues"
  },
  "homepage": "https://github.com/sabjorn/BandcampEnhancementSuite#readme"
}
